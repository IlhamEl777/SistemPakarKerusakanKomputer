<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.the360company.sistempakarkerusakankomputer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pakar_komputer_rev2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pakar_komputer_rev2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InformasiKerusakanActivity"
            android:label="@string/title_info_kerusakan"></activity>
        <activity
            android:name=".BantuanAplikasiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetailKerusakanActivity"
            android:label="@string/title_appbar_detailkerusakan"/>
        <activity android:name=".TentangAppActivity"
            android:label="@string/title_appbar_tentang"/>
        <activity android:name=".PertanyaanGejalaActivity"
            android:label="@string/title_appbar_diagosa"/>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>