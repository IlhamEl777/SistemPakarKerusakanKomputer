<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0183D1"
    tools:context=".PertanyaanGejalaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_pertanyaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_kode_gejala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:text="G1"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/image_view_gejala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/restart_sendiri"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_view_pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:text="Komputer sering restart sendiri"
                android:textSize="18sp"
                android:textColor="#000000"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_ya"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_pertanyaan"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="70dp"
        android:text="@string/text_button_ya"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/button_tidak"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview_pertanyaan"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="30dp"
        android:text="@string/text_button_tidak"
        android:textAllCaps="false"
        android:backgroundTint="#DD0D0D"
        android:textColor="#ffffff"/>



</RelativeLayout>